<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mycoronavirusapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_countries"
        android:name="com.example.mycoronavirusapp.ui.countries.CountriesFragment"
        android:label="@string/title_countries"
        tools:layout="@layout/fragment_countries" />

    <fragment
        android:id="@+id/navigation_corona"
        android:name="com.example.mycoronavirusapp.ui.corona.CoronaFragment"
        android:label="@string/title_corona"
        tools:layout="@layout/fragment_corona" />

    <fragment
        android:id="@+id/navigation_prevention"
        android:name="com.example.mycoronavirusapp.ui.prevention.PreventionFragment"
        android:label="@string/title_prevention"
        tools:layout="@layout/fragment_prevention" />
